<div class = "row" >
  <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @user do |f| %>
      <p><label for="inputName">Name</label></p>
      <p><%= f.text_field :name, autofocus: true %></p>
      <p><label for="inputImage">Image</label></p>
      <p><%= f.file_field :profile_image, accept: "image/*" %></p>
      <p><label for="inputIntroduction">Introduction</label></p>
      <p><%= f.text_area :introduction %></p>
      <%= f.submit "Update User", class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>